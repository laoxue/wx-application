/**info.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper-items{
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.title{
	display: block;
	width:85%;
	text-align: center;
	position:absolute;
	color:white;
	font-size:20px;
}
.article_box{
	width:100%;
	height: 150px;
	position: relative;
	display: flex;
	flex-direction:row;
	justify-content:space-around;
	align-items:center;
	flex-wrap: wrap;
}
.article{
	width:48%;
	height: 140px;
}
.article_img{
	width: 100%;
	height: 58%;
	background: white;
}
.article_hole{
	width:100%;
	height: 60px;
	display: flex;
	flex-direction:column;
}
.article_title{
	width: 90%;
	height: 40px;
	font-size: 14px;
	margin-left: 4px;
	position: relative;
	text-overflow:ellipsis;overflow:hidden
}
.a_title{
	display: block;
	word-wrap:break-word;
	font-size: 14px;
}
.article_date{
	width:96%;
	margin-left: 2%;
	font-size: 10px;
	display: flex;
	flex-direction:row;
	justify-content:space-between;
	color:gray;
}
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 100%;
  background:white;
  position:fixed;
  bottom:0px;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}